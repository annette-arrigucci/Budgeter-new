@model Budgeter.Models.LeaveHouseholdViewModel
@if (Model.HouseholdId != null)
{
    <h4>Leave Household</h4>
    using (Html.BeginForm("Leave", "Household", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.UserId)
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 col-md-offset-1">
                        <p>
                            Leave your current household.
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-1">
                        @Html.CheckBoxFor(m => Model.HasAgreedToLeave)
                        @Html.HiddenFor(m => Model.HasAgreedToLeave)
                        @Html.Raw("I understand that I will no longer have access to my current household's accounts.")                     
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Leave Household" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}
