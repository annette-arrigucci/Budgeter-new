@model Budgeter.Models.EmailViewModel
@if (Model.HouseholdId != null)
{
<h4>Invite Users</h4>
using (Html.BeginForm("InviteUser", "Household", new { email = Model.Email, householdId = Model.HouseholdId }, FormMethod.Post))
{
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
          <div class="row">
            <div class="col-md-6 col-md-offset-1">
                <p>
                    Invite another user to join your household.
                </p>
            </div>
          </div>
          <div class="row">
              @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
              <div class="col-md-4">
                 <input class="form-control" id="Email" name="Email" type="text" value="" />
              </div>
          </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send Invitation" class="btn btn-default" />
            </div>
        </div>
    </div>
}
}